extends layout

block content
  h1 Books
  .searchAndCreateNewBookContainer  
    p
      a.button(href='/books/new') Create New Book
    form(method="" action="/books")
      label(for='book-search')  Book Search: 
      input#book-search(type='search')
      button Search

  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
    each book in books
      tr
        td
          a(href=`/books/${book.id}`)=book.title
        td=book.author
        td= book.genre
        td= book.year
